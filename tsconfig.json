{
	"extends": ["./tsconfig.strict.json"],
	"include": ["src/**/*"],
	"compilerOptions": {
		"baseUrl": "src",
		"rootDir": "src",
		"outDir": "dist",

		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",

		"removeComments": true,
		"declaration": false,
		"sourceMap": false,

		"allowJs": false,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"isolatedModules": false
	}
}